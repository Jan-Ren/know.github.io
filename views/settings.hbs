        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script>
            $(document).ready(function(){
                $("button.updater").click(function() {
                    console.log("button.delete " + $(this).attr("data-id"))
                   /*$("#deleteid").val($(this).attr("data-id"))
                    $("#deleteform").submit()
                    */
                    var curr_pass = $("#password_curr").val()
                    var new_pass = $("#password_new").val()
                    var retype_pass = $("#password_retype").val()

                    if(curr_pass == $("#password_curr").attr("data-id_curr_pass")){
                        if(new_pass == retype_pass){
                            $("#updatepw").val(new_pass)
                            $("#updateid").val($(this).attr("data-id"))
                            $("#updateform").submit()
                        }else{
                            alert("New password and Re-type password does not match!")
                        }
                    }else{
                        alert("Current password does not match!")
                    }
                   
                })
                //bookmark click
                $("a.bookmark").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#bookmark_username").val($("a.profile").attr("data-id_username"))
                    $("#bookmarkform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //profile click
                $("a.profile").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#profile_username").val($("a.profile").attr("data-id_username"))
                    $("#profileform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //logout click
                $("a.logout").click(function(){
                    $("#logoutform").submit()
                })
                //home and Q&A click
                $("a#homeNav").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#refresh_home_username").val($("a.profile").attr("data-id_username"))
                    $("#refresh_homeForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //home and Q&A click
                $("a#QAnav").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#refresh_home_username").val($("a.profile").attr("data-id_username"))
                    $("#refresh_homeForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })      
            })
        </script>
    </head>
    <body>
        <div class="container h-100">
            <div class = "positer">
            <div class="container d-flex justify-content-center ml-5 sticky-top">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                 
                    <a class="navbar-brand" id="QAnav" href="#"><div id = "qawidther">Q&A</div></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" id="homeNav" href="#"><div id = "sampler"><div class="sprite sprite-010-house">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Home</div></div></a>
                            </li>
                            
                        </ul>
                        <div id = "searchinpbut">
                            <form class="form-inline my-2 my-lg-0" action = "search" method = "post">
                                <input type = "hidden" name = "usersearchid" value = "{{user._id}}">
                                
                                <input class="form-control mr-sm-2" id = "searchbarwidth" type="search" placeholder="question/topic/answer" name = "searchq">
                                  
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><div id = "buttonwidther"><div class="sprite sprite-004-magnifying-glass">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Search</div></div></button>
                                
                            </form>
                        </div>
                        <div class="nav-item active dropdown">
                                <a id = "profilewidther" class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-toggle="dropdown">
                                    {{user.username}}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item profile" data-id_username="{{user._id}}" href="#">Profile</a> {{!--data-id_username contains the user id of the user --}}
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item settings" href="#"><div id = "settingswidther"><div class="sprite sprite-002-settings">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Settings</div></div></a>
                                    <a class="logout dropdown-item" href="#"><div id = "logoutwidther"><div class="sprite sprite-020-logout">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Logout</div></div></a>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="container">
                <div class="row h-auto">
                    {{!-- RIIIIIIIIIIGGGGGGGHHHHHTTTT CONTAINER --}}
                    <div class="right_container h-auto col-4 col-md-12 d-flex justify-content-center align-items-center">
                        <div class="settings_container">
                            <div>Current password</div>
                            
                            <div><input class=" mr-sm-2" type = "password" data-id_curr_pass= "{{user.password}}" id = "password_curr"></div>
                            
                            <div>New password</div>
                            
                            <div><input class=" mr-sm-2" type = "password" id = "password_new"></div>
                            
                            <div>Re-type password</div>
                            
                            <div><input class=" mr-sm-2" type = "password" id = "password_retype"></div>
                            
                            <button class = "updater btn text-weight-normal" data-id = "{{user._id}}">Change</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {{!-- form equivalent of bookmark <a></a> --}}
        <form action="bookmark" id="bookmarkform" method="post">
            <input type="hidden" name="bookmarkUN" id="bookmark_username">
        </form>
        {{!-- form equivalent of profile <a></a> --}}
        <form action="profile" id="profileform" method="post">
            <input type="hidden" name="profileUN" id="profile_username">
        </form>
        {{!-- form equivalent of logout <a></a> --}}
        <form action="logout" id="logoutform" method="post">
        </form>
        {{!-- form equivalent of home and Q&A navigation link <a></a> --}}
        <form action="home" id="refresh_homeForm" method="post">
            <input type="hidden" name="refresh_homeUN" id="refresh_home_username">
        </form>
        <form action = "update" id = "updateform" method = "post">
            <input type = "hidden" name = "id" id = "updateid">
            <input type = "hidden" name = "un" id = "updateun">
            <input type = "hidden" name = "pw" id = "updatepw">
        </form>
