<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <style>
            div.content_item{
                margin-top: 24px;
                margin-bottom: 24px;
                background-color: cyan;
                width: 100%;
            }
            div.question_item_title{
                font-weight: bold;
                font-size: 40px;
                height: 50px;
            }
            div.right_container{
                background-color: teal;
            }
            div.left_container{
                background-color: lightseagreen;
            }
            div.question_answer_container{
                min-height: 125px;
                overflow: hidden;
                background-color: rgb(255, 255, 255);
            }
            div.postBy{
                height: 35px;
            }
            p.Answer_Title{
                font-size:20px;
            }
            div.answer_text{
                font-size:30px;
            }
            div > span.topics{
                font-size: 13px;
                color: rgb(48, 88, 117);
            }
            div > span.tags{
                font-size: 12px;
            }
            div.question_upper{
                cursor: pointer;
            }
        </style>
        <script src="jquery.js"> </script>
        <script src="moment.min.js"></script>
        <script>
            $(document).ready(function(){
                getTimeQuestion()
                getTimeAnswer()
                function getTimeQuestion(){
                    let question_time = $("p#question_time_slot").attr("data-id_date_time")
                    let result_time = moment(question_time).fromNow()
                    $("p#question_time_slot").html(result_time);

                    /*$("div.content_item").each(function() {
                        let thisDiv = this;
                         $('.time_slot').each(function(){
                             if( $(this).attr("data-id_question") == $(thisDiv).attr("data-id_question") ){
                                 let question_time = $(this).attr("data-id_date_time")
                                 let result_time = moment(question_time).fromNow()
                                 $(this).html(result_time);
                             }
                         })
                    })*/
                }

                function getTimeAnswer(){
                    $("div.question_answer_container").each(function() {
                        let thisDiv = this;
                         $('.time_slot').each(function(){
                             if( $(this).attr("data-id_answer") == $(thisDiv).attr("data-id_answer") ){
                                 let answer_time = $(this).attr("data-id_date_time")
                                 let result_time = moment(answer_time).fromNow()
                                 $(this).text(result_time);
                             }
                         })
                    })
                }

                //bookmark click
                $("a.bookmark").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#bookmark_username").val($("a.profile").attr("data-id_username"))
                    $("#bookmarkform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //profile click
                $("a.profile").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#profile_username").val($("a.profile").attr("data-id_username"))
                    $("#profileform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //"Posted By"profile click
                $("div.postBy").click(function(){
                    $("#profile_username").val($(this).attr("data-id_profile"))
                    $("#profileform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //settings click
                $("a.settings").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#settings_username").val($("a.profile").attr("data-id_username"))
                    $("#settingsform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //logout click
                $("a.logout").click(function(){
                    $("#logoutform").submit()
                })
                //addQuestion click
                $("button#addQuestion").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#addQuestion_username").val($("a.profile").attr("data-id_username"))
                    $("#addQuestionForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //home and Q&A click
                $("a#homeNav").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#refresh_home_username").val($("a.profile").attr("data-id_username"))
                    $("#refresh_homeForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //home and Q&A click
                $("a#QAnav").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#refresh_home_username").val($("a.profile").attr("data-id_username"))
                    $("#refresh_homeForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //add_answer form submit
                $("button#add_Answer_id").click(function(){
                    console.log("answer ehhe")
                    console.log($("a.profile").attr("data-id_username"))
                    $("#add_Answer_username_submit").val($("a.profile").attr("data-id_username")) //user id
                    $("#add_Answer_question_submit").val($("div.question").attr("data-id_question")) //question id
                    $("#add_AnswerForm_submit").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
            })
        </script>
    </head>
    <body>
        <div class="container h-100">
            <div class="container d-flex justify-content-center ml-5 sticky-top">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" id="QAnav" href="#">Q&A</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" id="homeNav" href="#">Home</a>
                            </li>
                            <li class="nav-item active dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-toggle="dropdown">
                                    {{user.username}}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item profile" data-id_username="{{user._id}}" href="#">{{user.username}}</a> {{!--data-id_username contains the user id of the user --}}
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item bookmark" href="#">Bookmarks</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item settings" href="#">Settings</a>
                                    <a class="dropdown-item" href="#">Help</a>
                                    <a class="logout dropdown-item" href="#">Logout</a>
                                </div>
                            </li>
                        </ul>
                        <form class="form-inline my-2 my-lg-0" action = "search" method = "post">
                            <input type = "hidden" name = "usersearchid" value = "{{user._id}}">
                            <input class="form-control mr-sm-2" type="search" placeholder="question/topic/answer" name = "searchq">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </div>
                </nav>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-8 col-md-2 left_container p-2">
                        <div class="sticky-top">
                            <div class="title container d-flex justify-content-center font-weight-bold">Feed</div>
                            <br>
                            <button type="button" class="btn btn-primary " id="addQuestion"> Add a question! </button>
                        </div>
                    </div>
                    <div class="col-4 col-md-10 right_container d-flex justify-content-center">
                        <div class="content_item container-fluid h-auto mb-4 mt-4 w-100 question" data-id_question="{{question._id}}">
                            <div class="question_upper" id="see_answers_button" data-id_question="{{_id}}">
                                <div class=" h-auto question_item_title ">{{question.title}}</div>
                                <div>
                                    <span class="topics">{{question.topic}}</span>;
                                    <span class="tags text-secondary bg-gradient-secondary">{{question.tag}}</span>
                                </div>
                            </div>
                            <hr></hr>
                            <div class="d-flex">
                                {{!-- <p>
                                  <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample{{question._id}}" aria-expanded="false" aria-controls="collapseExample{{_id}}">
                                    Answer
                                  </button>
                                </p> --}}
                                {{!-- <div class="collapse" id="collapseExample{{question._id}}"> --}}
                                  <form action = "add_answer_submit" id="add_AnswerForm_submit" method="post">
                                    <input type="hidden" name="add_AnswerUN_submit" id="add_Answer_username_submit"> {{!--user id --}}
                                    <input type="hidden" name="add_AnswerQ_submit" id="add_Answer_question_submit"> {{!--question id --}}
                                    <div class="form-group green-border-focus">
                                      <textarea class="form-control col-xs-12" id="textarea_answer_id" rows="2" cols="75" name="add_ans_submit"></textarea>
                                    </div>
                                    <button type="button" class="btn btn-primary" id="add_Answer_id">Submit</button>
                                  </form>
                                {{!-- </div> --}}
                                <div class=" ml-auto" type="hidden">
                                    Asked by:<div class="postBy btn btn-link text-weight-normal"data-id_profile="{{question.userID._id}}">{{question.userID.username}} </div>
                                    <p id="question_time_slot" class="text-secondary"data-id_question="{{question._id}}" data-id_date_time="{{question.date_time}}"></p>                                
                                </div>
                            </div>
                            
                            <p class="Answer_Title font-weight-normal">Answers</p>
                            {{#each question.answerID}}
                                <div class="question_answer_container container-fluid h-auto mb-4 mt-4  w-100" data-id_answer="{{_id}}">
                                    <div class="answer_text font-weight-light">{{answer}}</div>
                                    <div class="d-flex">
                                        <div class="postBy ml-auto h-auto btn btn-link" data-id_profile="{{userID._id}}">
                                            <p>{{userID.username}} </p>
                                            <p class="time_slot text-secondary"data-id_answer="{{_id}}" data-id_date_time="{{date_time}}"></p>
                                        </div>
                                    </div>
<!--            
                                    <div class="d-flex">
                                        <div class="postBy btn text-secondary" data-id_profile="{{userID._id}}">By:   {{userID.username}}</div> 
                                        <div class="ml-auto">boomkark_photo</div>
                                    </div>
-->
                                    {{!-- <hr></hr> --}}
<!--
                                    Answered:
                                    <div>{{answer}}</div>
-->
                                </div>
                                <hr></hr>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{!-- form equivalent of settings <a></a> --}}
         <form action="settings" id="settingsform" method="post">
            <input type="hidden" name="settingsUN" id="settings_username">
        </form>
        {{!-- form equivalent of bookmark <a></a> --}}
        <form action="bookmark" id="bookmarkform" method="post">
            <input type="hidden" name="bookmarkUN" id="bookmark_username">
        </form>
        {{!-- form equivalent of profile <a></a> --}}
        <form action="profile" id="profileform" method="post">
            <input type="hidden" name="profileUN" id="profile_username">
        </form>
        {{!-- form equivalent of logout <a></a> --}}
        <form action="logout" id="logoutform" method="post">
        </form>
        {{!-- form equivalent of add_a_question <a></a> --}}
        <form action="addQuestion" id="addQuestionForm" method="post">
            <input type="hidden" name="addQuestionUN" id="addQuestion_username">
        </form>
        {{!-- form equivalent of home and Q&A navigation link <a></a> --}}
        <form action="home" id="refresh_homeForm" method="post">
            <input type="hidden" name="refresh_homeUN" id="refresh_home_username">
        </form>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>