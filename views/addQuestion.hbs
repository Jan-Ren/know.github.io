    <body>
        <div class="container h-100">
            <div class = "positer">
            <div class="container d-flex justify-content-center ml-5 sticky-top">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                 
                    <a class="navbar-brand" id="QAnav" href="#"><div id = "qawidther">Q&A</div></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" id="homeNav" href="#"><div id = "sampler"><div class="sprite sprite-010-house">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Home</div></div></a>
                            </li>
                            
                        </ul>
                        <div id = "searchinpbut">
                            <form class="form-inline my-2 my-lg-0" action = "search" method = "post">
                                <input type = "hidden" name = "usersearchid" value = "{{user._id}}">
                                
                                <input class="form-control mr-sm-2" id = "searchbarwidth" type="search" placeholder="question/topic/answer" name = "searchq">
                                  
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><div id = "buttonwidther"><div class="sprite sprite-004-magnifying-glass">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Search</div></div></button>
                                
                            </form>
                        </div>
                        <div class="nav-item active dropdown">
                                <a id = "profilewidther" class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-toggle="dropdown">
                                    {{user.username}}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item profile" data-id_username="{{user._id}}" href="#">{{user.username}}</a> {{!--data-id_username contains the user id of the user --}}
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item bookmark" href="#">Bookmarks</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item settings" href="#"><div id = "settingswidther"><div class="sprite sprite-002-settings">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Settings</div></div></a>
                                    <a class="dropdown-item" href="#">Help</a>
                                    <a class="logout dropdown-item" href="#"><div id = "logoutwidther"><div class="sprite sprite-020-logout">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Logout</div></div></a>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-8 col-md-2 left_container p-2">
                        <div class="sticky-top">
                            <div class="title container d-flex justify-content-center font-weight-bold">Feed</div>
                            <br>
                            <button type="button" class="btn btn-primary " id="addQuestion"> Add a question! </button>
                        </div>
                    </div>
                    <div class="col-4 col-md-10 right_container">
                        <form action = "add_question_submit" id="add_QuestionForm_submit" method="post">
                            <input type="hidden" name="add_QuestionUN_submit" id="add_Question_username_submit">
                            <div class = "title_addQuestion add-header">Add a Question</div>
                            <hr></hr>
                            <div class="form-group">
                            <label for = "question_header">Question</label>
                            <input id = "question_title_input" type="text" class="form-control" name="question_title" placeholder="Start with what, where, when, who">
                            </div>
                            <div class="form-group">
                                <label for = "topic_header">Choose Topic</label>
                                <select class="form-control" name="ts" id="topic_select">
                                <option>Mathematics</option>
                                <option>Science</option>
                                <option>Politics</option>
                                <option>Technology</option>
                                <option>Music</option>
                                </select>
                            </div>
                            <div class="form-group">
                            <label for = "tag_header">Tag</label>
                            <input id = "question_tag_input" type="text" class="form-control" name="question_tag" placeholder="use hashtags ex.(#Calculus)">
                            </div>
                            <button type="button" class="btn btn-primary" id="add_Question_id">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{!-- form equivalent of settings <a></a> --}}
         <form action="settings" id="settingsform" method="post">
            <input type="hidden" name="settingsUN" id="settings_username">
        </form>
        {{!-- form equivalent of bookmark <a></a> --}}
        <form action="bookmark" id="bookmarkform" method="post">
