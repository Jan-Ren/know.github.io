<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        
        <style>
            div.content_item{
                margin-top: 24px;
                margin-bottom: 24px;
                background-color: cyan;
                width: 100%;
            }
            div.question_item_title{
                text-align: center;
                font-weight: bold;
                background-color: lightcyan;
            }
            div.right_container{
                background-color: teal;
            }
            div.left_container{
                background-color: lightseagreen;
            }
            button.answer_btn_collap{
                border-size: 1px;
                border-radius: 42px;
            }
            div.postBy{
                height: 35px;
                border-radius: 42px;
                background-color: rgb(66, 138, 219);
                
            }
        </style>

        <script src="jquery.js"> </script>
        <script>
            $(document).ready(function(){
                //bookmark click
                $("a.bookmark").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#bookmark_username").val($("a.profile").attr("data-id_username"))
                    $("#bookmarkform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //profile click
                $("a.profile").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#profile_username").val($("a.profile").attr("data-id_username"))
                    $("#profileform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //settings click
                $("a.settings").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#settings_username").val($("a.profile").attr("data-id_username"))
                    $("#settingsform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //logout click
                $("a.logout").click(function(){
                    $("#logoutform").submit()
                })
                //"Posted By"profile click
                $("div.postBy").click(function(){
                    $("#profile_username").val($(this).attr("data-id_profile"))
                    $("#profileform").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //addQuestion click
                $("button#addQuestion").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#addQuestion_username").val($("a.profile").attr("data-id_username"))
                    $("#addQuestionForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //Math clickedclick
                $("a#Mathematics").click(function(){
                    console.log("MATTH")
                    $("#feedFilter_home_username").val($("a.profile").attr("data-id_username"))
                    $("#feedFilter_username").val("Mathematics")
                    $("#feedFilterform").submit()
                })
                //Science clickedclick
                $("a#Science").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#feedFilter_home_username").val($("a.profile").attr("data-id_username"))
                    $("#feedFilter_username").val("Science")
                    $("#feedFilterform").submit()
                })
                //Politics clickedclick
                $("a#Politics").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#feedFilter_home_username").val($("a.profile").attr("data-id_username"))
                    $("#feedFilter_username").val("Politics")
                    $("#feedFilterform").submit()
                })
                //Technology clickedclick
                $("a#Technology").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#feedFilter_home_username").val($("a.profile").attr("data-id_username"))
                    $("#feedFilter_username").val("Technology")
                    $("#feedFilterform").submit()
                })
                //Music clickedclick
                $("a#Music").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#feedFilter_home_username").val($("a.profile").attr("data-id_username"))
                    $("#feedFilter_username").val("Music")
                    $("#feedFilterform").submit()
                })

                //home and Q&A click
                $("a#homeNav").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#refresh_home_username").val($("a.profile").attr("data-id_username"))
                    $("#refresh_homeForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //home and Q&A click
                $("a#QAnav").click(function(){
                    console.log($("a.profile").attr("data-id_username"))
                    $("#refresh_home_username").val($("a.profile").attr("data-id_username"))
                    $("#refresh_homeForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
                //add_answer form submit
                $("button#add_Answer_id").click(function(){
                    console.log($(temp).attr("data-id_question"))
                    
                    
                    $("#add_Answer_username_submit").val($("a.profile").attr("data-id_username")) //user id
                    $("#add_Answer_question_submit").val($(this).attr("data-id_question")) //question id
                    var temp = this;
                    
                    //gets every text area to check if that is the right text area for the question
                        $("textarea.myTextArea").each(function() {
                            if($(temp).attr("data-id_question") == $(this).attr("data-id_question")){
                                $("#add_Answer_answer_submit").val($(this).val()) //answer
                            } 
                        })
                   
                    $("#add_AnswerForm_submit").submit()
                })
                //see_answer form submit
                $("button#see_answers_button").click(function(){
                    console.log("ers")
                    $("#seeAnswer_username").val($("a.profile").attr("data-id_username")) //user id
                    $("#seeAnswer_question").val($(this).attr("data-id_question")) //question id
                    $("#seeAnswerForm").submit()
                    console.log($("a.profile").attr("data-id_username"))
                })
            })
        </script>
    </head>
    <body>
        <div class="container h-100">
            <div class="container d-flex justify-content-center ml-5 sticky-top">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" id="QAnav" href="#">Q&A</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" id="homeNav" href="#">Home</a>
                            </li>
                            <li class="nav-item active dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-toggle="dropdown">
                                    {{user.username}}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item profile" data-id_username="{{user._id}}" href="#">{{user.username}}</a> {{!--data-id_username contains the user id of the user --}}
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item bookmark" href="#">Bookmarks</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item settings" href="#">Settings</a>
                                    <a class="dropdown-item" href="#">Help</a>
                                    <a class="logout dropdown-item" href="#">Logout</a>
                                </div>
                            </li>
                        </ul>
                        <form class="form-inline my-2 my-lg-0" action = "search" method = "post">
                            <input type = "hidden" name = "usersearchid" value = "{{user._id}}">
                            <input class="form-control mr-sm-2" type="search" placeholder="question/topic/answer" name = "searchq">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </div>
                </nav>
            </div>
            <div class="container">
                <div class="row">
                    <div class="left_container col-8 col-md-2 p-2">
                        <div class="sticky-top">
                            <div class="title container d-flex justify-content-center font-weight-bold">Feed</div>
                            <br>
                            <a href="#" class="list-group-item list-group-item-action" id="Mathematics">Mathematics</a>
                            <a href="#" class="list-group-item list-group-item-action" id="Science">Science</a>
                            <a href="#" class="list-group-item list-group-item-action" id="Politics">Politics</a>
                            <a href="#" class="list-group-item list-group-item-action" id="Technology">Technology</a>
                            <a href="#" class="list-group-item list-group-item-action" id="Music">Music</a>
                            <button type="button" class="btn btn-primary " id="addQuestion"> Add a question! </button>
                        </div>
                    </div>
                    <div class="right_container col-4 col-md-10 d-flex justify-content-center">
                        <div class="row w-100">
                            {{#each question}}
                            <div class="content_item container-fluid mb-4 mt-4 w-100 question" data-id_question="{{_id}}">
                                <div class="question_item_title text-uppercase text-center font-weight-bold ">{{title}}</div>
                                <div>Topic: {{topic}}</div>
                                <div>Tag: {{tag}}</div>
                                <div class="postBy btn text-weight-normal"data-id_profile="{{userID._id}}">Posted by: {{userID.username}} </div>
                                <hr></hr>
                                <div class="d-flex">
                                    <p>
                                      <button class="answer_btn_collap btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample{{_id}}" aria-expanded="false" aria-controls="collapseExample{{_id}}">
                                        Answer
                                      </button>
                                    </p>
                                    <div class="collapse" id="collapseExample{{_id}}">
                                      <form action = "add_answer_submit" id="add_AnswerForm_submit" method="post">
                                        <input type="hidden" name="add_AnswerUN_submit" id="add_Answer_username_submit"> {{!--user id --}}
                                        <input type="hidden" name="add_AnswerQ_submit" id="add_Answer_question_submit"> {{!--question id --}}
                                        <input type="hidden" name="add_ans_submit" id="add_Answer_answer_submit"> {{!--anssswer--}}
                                        <div class="form-group green-border-focus">
                                          <textarea class="myTextArea form-control col-xs-12" data-id_question="{{_id}}" id="textarea_answer_id" rows="3" cols="80" name="answer_textarea"></textarea>
                                        </div>
                                        <button type="button" class="btn btn-primary"  data-id_question="{{_id}}" id="add_Answer_id">Submit</button>
                                      </form>
                                    </div>
                                    <div class=" ml-auto">
                                        <button type="button" class="btn btn-secondary" data-id_question="{{_id}}" id="see_answers_button">See Answer</button>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{!-- form equivalent of settings <a></a> --}}
         <form action="settings" id="settingsform" method="post">
            <input type="hidden" name="settingsUN" id="settings_username">
        </form>
        {{!-- form equivalent of bookmark <a></a> --}}
        <form action="bookmark" id="bookmarkform" method="post">
            <input type="hidden" name="bookmarkUN" id="bookmark_username">
        </form>
        {{!-- form equivalent of profile <a></a> --}}
        <form action="profile" id="profileform" method="post">
            <input type="hidden" name="profileUN" id="profile_username">
        </form>
        {{!-- form equivalent of feed filters <a></a> --}}
        <form action="feedFilter" id="feedFilterform" method="post">
            <input type="hidden" name="feedFilterUN" id="feedFilter_username">
            <input type="hidden" name="feedFilter_homeUN" id="feedFilter_home_username">
        </form>
        {{!-- form equivalent of logout <a></a> --}}
        <form action="logout" id="logoutform" method="post">
        </form>
        {{!-- form equivalent of add_a_question <a></a> --}}
        <form action="addQuestion" id="addQuestionForm" method="post">
            <input type="hidden" name="addQuestionUN" id="addQuestion_username">
        </form>
        {{!-- form equivalent of home and Q&A navigation link <a></a> --}}
        <form action="home" id="refresh_homeForm" method="post">
            <input type="hidden" name="refresh_homeUN" id="refresh_home_username">
        </form>
        {{!-- form equivalent of "see answer" button <a></a> --}}
        <form action="seeAnswer" id="seeAnswerForm" method="post">
            <input type="hidden" name="seeAnswerUN" id="seeAnswer_username">
            <input type="hidden" name="seeAnswerQ" id="seeAnswer_question">
        </form>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
